doctype html
html
	head
		title #{title}
		link(href='css/blueprint.css', rel='stylesheet' type='text/css')
		link(href='css/pork.css', rel='stylesheet' type='text/css')
	body
		.container
			hr.space
			.span-3.prepend-1
				a(href='/', class='logo'): h1.logo Pork!
