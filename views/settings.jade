extend layout
block message
	strong Pork!
	span  Settings.
block content
	.span-10.last.prepend-1.content_box
		h3 Check it when you need it!
	form.settings.content_box(name='settings', method='post', action='/settings/#{name}')
		.span-5.prepend-1.content_box
			h4 I can help with...
			- var num = 0;
			- for (var c = 0; c < topics.categories.length; c++)
				strong #{topics.categories[c].name}
				br
				- for (var t = 0; t < topics.categories[c].subtopics.length; t++)
					- var can = false;
					- for (var u = 0; u < topics.categories[c].subtopics[t].canHelp.length; u++)
						- if (topics.categories[c].subtopics[t].canHelp[u] == name)
							- can = true;
					- if (can)
						input(type='checkbox', name='can_#{num}', value='can_#{num}', checked)
					- else
						input(type='checkbox', name='can_#{num}', value='can_#{num}')
					| #{topics.categories[c].subtopics[t].name}
					- num++;
					br
		.span-5.last.content_box
			h4 I need help with...
			- var num = 0;
			- for (var c = 0; c < topics.categories.length; c++)
				strong #{topics.categories[c].name}
				br
				- for (var t = 0; t < topics.categories[c].subtopics.length; t++)
					- var need = false;
					- for (var u = 0; u < topics.categories[c].subtopics[t].needsHelp.length; u++)
						- if (topics.categories[c].subtopics[t].needsHelp[u] == name)
							- need = true;
					- if (need)
						input(type='checkbox', name='need_#{num}', value='need_#{num}', checked)
					- else
						input(type='checkbox', name='need_#{num}', value='need_#{num}')
					| #{topics.categories[c].subtopics[t].name}
					- num++;
					br
		.span-10.last.content_box.prepend-1
			input(type='submit')